{
  "name": "eslint-config-breki",
  "version": "1.0.7",
  "description": "A handful of rules used by Breki Tomasson for formatting, error-checking and practicing Safe Hex.",
  "license": "MIT",
  "scripts": {
    "patch": "npm version patch && npm publish && git push --follow-tags",
    "test": "jest",
    "commitmsg": "validate-commit-msg",
    "codacy": "cat ./coverage/lcov.info | codacy-coverage",
    "prepush": "npm run test",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BrekiTomasson/breki-eslint-config.git"
  },
  "keywords": [
    "eslint",
    "prettier",
    "standard"
  ],
  "author": "Breki Tomasson <breki.tomasson@gmail.com>",
  "bugs": {
    "url": "https://github.com/BrekiTomasson/breki-eslint-config/issues"
  },
  "homepage": "https://github.com/BrekiTomasson/breki-eslint-config#readme",
  "dependencies": {
    "eslint-plugin-array-func": "~3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.24.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-ocd": "^1.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-security": "~1.4.0",
    "eslint-plugin-standard": "~4.0.0",
    "eslint-plugin-unicorn": "^6.0.1",
    "eslint-plugin-vue": "^4.7.1",
    "regenerator-runtime": "~0.12.1",
    "standard-engine": "~10.0.0"
  },
  "devDependencies": {
    "eslint": "~5.6.1",
    "jest": "^23.6.0",
    "jest-runner-eslint": "~0.6.0",
    "travis-deploy-once": "^5.0.9"
  },
  "jest": {
    "projects": [
      {
        "displayName": "Linting Test",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/**/*.{js,jsx}"
        ]
      },
      {
        "cache": true,
        "cacheDirectory": "<rootDir>/test/tmp",
        "collectCoverage": true,
        "collectCoverageFrom": [
          "**/*.{js,jsx}",
          "!**/node_modules/**",
          "!<rootDir>/test/coverage/**"
        ],
        "coverageDirectory": "<rootDir>/test/coverage/",
        "coveragePathIgnorePatterns": [
          "**/node_modules/**"
        ],
        "coverageReporters": [
          "lcov",
          "json",
          "text"
        ],
        "coverageThreshold": {
          "global": {
            "branches": 85,
            "functions": 85,
            "lines": 80,
            "statements": 80
          }
        },
        "displayName": "Code tests",
        "forceCoverageMatch": [
          "<rootDir>/test/*.test.js"
        ],
        "runner": "jest-runner",
        "testLocationInResults": false,
        "testMatch": [
          "<rootDir>/test/*.test.js"
        ],
        "transform": {
          "^.+\\.jsx?$": "./node_modules/babel-jest/build/index.js"
        },
        "watchPathIgnorePatterns": [
          "<rootDir>/node_modules/"
        ]
      }
    ]
  }
}
