{
  "name": "eslint-config-breki",
  "version": "1.0.20",
  "description": "A handful of rules used by Breki Tomasson for formatting, error-checking and practicing Safe Hex.",
  "license": "MIT",
  "scripts": {
    "patch": "npm version patch && npm publish && git push --follow-tags",
    "lint": "eslint \"./**/*.js\"",
    "test": "jest",
    "commitmsg": "validate-commit-msg",
    "codacy": "cat ./coverage/lcov.info | codacy-coverage",
    "prepush": "npm run test",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BrekiTomasson/breki-eslint-config.git"
  },
  "keywords": [
    "eslint",
    "prettier",
    "standard"
  ],
  "author": {
    "name": "Breki Tomasson",
    "email": "breki.tomasson@gmail.com",
    "url": "http://brekitomasson.com"
  },
  "bugs": {
    "url": "https://github.com/BrekiTomasson/eslint-config-breki/issues"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-array-func": "^3.1.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-es": "^1.4.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-html": "^5.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-json": "^1.3.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-ocd": "^1.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-unicorn": "^6.0.1",
    "eslint-plugin-vue": "^5.1.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.4.0",
    "eslint-plugin-you-dont-need-momentjs": "^1.4.0",
    "npm-install-package": "^2.1.0",
    "remark-lint": "^6.0.4",
    "resolve": "^1.9.0",
    "standard-engine": "^10.0.0",
    "vue": "^2.5.21"
  },
  "devDependencies": {
    "@types/node": "^10.12.18",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-runner-eslint": "^0.7.1",
    "lint-staged": "^8.1.0",
    "travis-deploy-once": "^5.0.11",
    "typescript": "^3.2.2"
  },
  "homepage": "https://github.com/BrekiTomasson/eslint-config-breki#readme",
  "jest": {
    "projects": [
      {
        "displayName": "Linting Test",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/**/*.js"
        ]
      },
      {
        "cache": true,
        "cacheDirectory": "<rootDir>/test/tmp",
        "collectCoverage": true,
        "collectCoverageFrom": [
          "**/*.js",
          "!**/node_modules/**",
          "!<rootDir>/test/coverage/**"
        ],
        "coverageDirectory": "<rootDir>/test/coverage/",
        "coveragePathIgnorePatterns": [
          "**/node_modules/**"
        ],
        "coverageReporters": [
          "lcov",
          "json",
          "text"
        ],
        "coverageThreshold": {
          "global": {
            "branches": 85,
            "functions": 85,
            "lines": 80,
            "statements": 80
          }
        },
        "displayName": "Code tests",
        "moduleFileExtensions": [
          "js",
          "json"
        ],
        "forceCoverageMatch": [
          "<rootDir>/test/*.test.js"
        ],
        "runner": "jest-runner",
        "testLocationInResults": false,
        "testMatch": [
          "<rootDir>/test/*.test.js"
        ],
        "transform": {
          "^.+\\.js$": "babel-jest"
        },
        "watchPathIgnorePatterns": [
          "<rootDir>/node_modules/"
        ]
      }
    ]
  }
}
