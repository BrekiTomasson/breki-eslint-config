{
    "name": "eslint-config-breki",
    "version": "1.0.5",
    "description": "A handful of rules used by Breki Tomasson for formatting, error-checking and practicing Safe Hex.",
    "license": "MIT",
    "scripts": {
        "patch": "npm version patch && npm publish && git push --follow-tags",
        "test": "jest",
        "commitmsg": "validate-commit-msg",
        "codacy": "cat ./coverage/lcov.info | codacy-coverage",
        "prepush": "npm run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BrekiTomasson/breki-eslint-config.git"
    },
    "keywords": [
        "eslint",
        "prettier",
        "standard"
    ],
    "author": "Breki Tomasson <breki.tomasson@gmail.com>",
    "bugs": {
        "url": "https://github.com/BrekiTomasson/breki-eslint-config/issues"
    },
    "homepage": "https://github.com/BrekiTomasson/breki-eslint-config#readme",
    "dependencies": {
        "eslint": "~4.19.1",
        "eslint-plugin-array-func": "~3.0.0",
        "eslint-plugin-import": "^2.9.0",
        "eslint-plugin-jest": "~21.15.0",
        "eslint-plugin-node": "~6.0.1",
        "eslint-plugin-ocd": "~1.0.6",
        "eslint-plugin-promise": "~3.7.0",
        "eslint-plugin-react": "~7.7.0",
        "eslint-plugin-security": "~1.4.0",
        "eslint-plugin-standard": "~3.0.1",
        "eslint-plugin-unicorn": "~4.0.2",
        "jest-runner-eslint": "~0.4.0",
        "regenerator-runtime": "~0.11.1",
        "standard-engine": "~8.0.1"
    },
    "devDependencies": {
        "jest": "~22.4.3",
        "validate-commit-msg": "~2.14.0"
    },
    "peerDependencies": {
        "eslint": "^4.18.0"
    },
    "jest": {
        "projects": [
            {
                "displayName": "Eslint",
                "runner": "jest-runner-eslint",
                "testMatch": [
                    "<rootDir>/**/*.js"
                ]
            },
            {
                "automock": false,
                "browser": false,
                "cache": true,
                "cacheDirectory": "<rootDir>/test/tmp",
                "clearMocks": true,
                "coveragePathIgnorePatterns": [
                    "<rootDir>/node_modules/"
                ],
                "displayName": "Code tests",
                "forceCoverageMatch": [
                    "**/*.test.js"
                ],
                "moduleDirectories": [
                    "node_modules"
                ],
                "moduleFileExtensions": [
                    "js",
                    "json",
                    "jsx",
                    "node"
                ],
                "moduleNameMapper": {},
                "modulePathIgnorePatterns": [],
                "resetMocks": false,
                "resetModules": false,
                "restoreMocks": false,
                "runner": "jest-runner",
                "setupFiles": [
                    "<rootDir>/node_modules/regenerator-runtime/runtime.js"
                ],
                "snapshotSerializers": [],
                "testEnvironment": "jest-environment-jsdom",
                "testEnvironmentOptions": {},
                "testLocationInResults": false,
                "testMatch": [
                    "**/*.test.js"
                ],
                "testPathIgnorePatterns": [
                    "<rootDir>/node_modules/"
                ],
                "testRunner": "<rootDir>/node_modules/jest-jasmine2/build/index.js",
                "transform": {
                    "^.+\\.jsx?$": "./node_modules/babel-jest/build/index.js"
                },
                "transformIgnorePatterns": [
                    "<rootDir>/node_modules/"
                ],
                "verbose": true,
                "watchPathIgnorePatterns": [
                    "<rootDir>/node_modules/"
                ]
            }
        ]
    }
}
